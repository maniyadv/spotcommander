PROJECT_PATH="$1"

INOTIFYWAIT_FILE=""$PROJECT_PATH"/run/daemon.inotify";

while inotifywait -e modify "$INOTIFYWAIT_FILE"; do

	ACTION="$(cat "$INOTIFYWAIT_FILE")"

	if [ "$ACTION" == "spotify_launch" ] && [ -n "$DISPLAY" ]; then

		spotify 1>/dev/null 2>&1 &

	fi

done